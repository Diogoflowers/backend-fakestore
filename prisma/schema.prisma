generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Float
  description String   @db.Text 
  image       String
  rate        Float
  createdAt   DateTime @default(now())
  userId      Int
  User        User     @relation(fields: [userId], references: [id])
}
